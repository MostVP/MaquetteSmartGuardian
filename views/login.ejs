<!Doctype Html>
<html>
	<head>
		<meta charset="utf-8"/>
		<title>PlateForme SmartWatch</title>
		<link rel="stylesheet" href="css/bootstrap.css">
		<link rel="stylesheet" href="css/stylelogin.css">
	</head>
	<body>
		<div class="container" id="all">
			<header>
				<div id="topheader" class="row">
					<div class="col-sm-12">
						<a href="index"><div id="logo"></div></a>
						<span id="title"></span>
						
					</div>
				</div>
			</header>
			<div class="row">
				<div class="col-sm-12" id="content">
					<div id="main">
						<span id="signin">Connexion</span><br>
						<form  method="post" action ="main">
							<div class="form-group">
								<label for="pseudo">Pseudo:</label>
								<input type="text" class="form-control" id="pseudo" name ="login">
							</div>
							<div class="form-group">
								<label for="mdp">Mot de passe:</label>
								<input type="password" class="form-control" id="mdp" name="password">
							</div>
							<button type="submit"  id="submit">Se connecter</button>
						</form>
					</div>
				</div>
			</div>
			<div class="row">
				<footer class="col-sm-12"></footer>
			</div>
		</div>
		
	</body>
</html>